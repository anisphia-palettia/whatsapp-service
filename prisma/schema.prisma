// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated"
}

enum SessionStatus {
  CONNECTED
  DISCONNECTED
}

model WhatsappSession {
  id              String            @id @default(uuid())
  phoneNumber     String            @unique
  status          SessionStatus     @default(DISCONNECTED)
  lastConnectedAt DateTime?
  chats           WhatsappChat[]
  messages        WhatsappMessage[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model WhatsappChat {
  id          String            @id @default(uuid())
  sessionId   String
  session     WhatsappSession   @relation(fields: [sessionId], references: [id])
  chatId      String
  name        String
  isGroup     Boolean
  unreadCount Int               @default(0)
  messages    WhatsappMessage[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@unique([sessionId, chatId])
}

model WhatsappMessage {
  id          String          @id @default(uuid())
  sessionId   String
  session     WhatsappSession @relation(fields: [sessionId], references: [id])
  chatId      String
  chat        WhatsappChat    @relation(fields: [chatId], references: [id])
  messageId   String
  fromMe      Boolean
  senderId    String?
  messageType String?
  text        String?
  caption     String?
  mediaPath   String?
  timestamp   BigInt
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@unique([sessionId, messageId])
}
