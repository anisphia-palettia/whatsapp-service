{
  "compilerOptions": {
    "target": "es2016",                        // Output ES2016-compatible JS
    "module": "commonjs",                      // Use CommonJS module format
    "esModuleInterop": true,                   // Interop for CommonJS-style imports
    "forceConsistentCasingInFileNames": true,  // Prevent casing mismatches
    "strict": true,                            // Enable all strict type checking
    "skipLibCheck": true,                      // Don't type-check external .d.ts files

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@generated/*": ["generated/*"]
    },

    "outDir": "dist",

  },
  "include": ["src", "generated"],
  "exclude": ["node_modules", "dist"]
}
